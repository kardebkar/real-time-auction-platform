{
  "version": "1.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": ["main", "develop"],
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "useWorkspaces": true
}
